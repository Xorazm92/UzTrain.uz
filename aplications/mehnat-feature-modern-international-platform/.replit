modules = ["nodejs-20"]

[agent]
integrations = ["javascript_database==1.0.0"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 8084
externalPort = 80

[workflows]
runButton = "Production Server"

[[workflows.workflow]]
name = "Dev Server"
author = 46731532
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install --legacy-peer-deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Production Server"
author = 46731532
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install --legacy-peer-deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[deployment]
run = ["sh", "-c", "npm run start:prod"]
